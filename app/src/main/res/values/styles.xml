<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing48</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginLeft">@dimen/spacing16</item>
        <item name="android:layout_marginRight">@dimen/spacing16</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="QuantityButtons">
        <item name="android:layout_width">@dimen/spacing48</item>
        <item name="android:layout_height">@dimen/spacing48</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextViewOther">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing16</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingEnd">@dimen/spacing24</item>
        <item name="android:paddingStart">@dimen/spacing24</item>
    </style>

</resources>
